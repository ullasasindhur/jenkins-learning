pipeline {

  agent {
    kubernetes {
      yamlFile 'kubernetes/kaniko-builder.yaml'
    }
  }

  stages {

    stage('Information about system') {
      steps{
        sh 'ls -alh'
        sh 'cat /etc/os-release'
      }
    }

    stage('Deploy App to Kubernetes') {     
      steps {
        container('kubectl') {
          withCredentials([file(credentialsId: 'Kubernetes-Config', variable: 'KUBECONFIG')]) {
            sh 'sed -i "s/<TAG>/${BUILD_NUMBER}/" kubernetes/deplyoment.yaml'
            sh 'kubectl apply -f kubernetes/deplyoment.yaml'
          }
        }
      }
    }
  
  }
}